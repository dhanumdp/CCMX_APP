<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/Transparent"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="60dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateOfComplaint"
                android:layout_marginStart="222dp"
                android:fontFamily="@font/audiowide"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:text="09/05/2020"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/dateOfComplaint"
                android:layout_height="wrap_content"
              android:layout_marginStart="50dp"
                android:fontFamily="@font/audiowide"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:id="@+id/studRollno"
                android:text="Roll No : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/dateOfComplaint"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/audiowide"
                android:layout_toRightOf="@id/studRollno"
                android:textSize="20dp"
                android:textColor="#fff"
                android:id="@+id/studRollnoTxt"
                android:layout_marginBottom="10dp"
                android:text=" RollNo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/systemNo"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/audiowide"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_below="@id/studRollno"
                android:layout_marginBottom="10dp"
                android:text="System No : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/systemNoTxt"
                android:layout_toRightOf="@id/systemNo"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/audiowide"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_below="@id/studRollno"
                android:text="SystemNo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/audiowide"
                android:textSize="20dp"
                android:layout_marginStart="50dp"
                android:textColor="#fff"
                android:id="@+id/complaintText"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/systemNo"
                android:text="Complaint : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/audiowide"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/complaintText"

                android:textColor="#fff"
                android:id="@+id/complaintTexttxt"
                android:layout_below="@id/systemNo"
                android:text="Complaint"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/complaintText"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/audiowide"
                android:textSize="20dp"
                android:layout_marginStart="50dp"
                android:textColor="#fff"
                android:id="@+id/complaintStatus"
                android:layout_marginBottom="10dp"
                android:text="Status : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/complaintText"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/audiowide"
                android:textSize="20dp"
                android:layout_toRightOf="@id/complaintStatus"
                android:textColor="#fff"
                android:id="@+id/complaintStatustxt"
                android:text="Status"
                android:layout_marginBottom="10dp"
                />




        </RelativeLayout>







    </androidx.cardview.widget.CardView>



</RelativeLayout>